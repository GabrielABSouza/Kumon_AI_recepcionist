# Evolution API Configuration
EVOLUTION_API_KEY=development-key-change-in-production
EVOLUTION_API_URL=http://localhost:8080

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Qdrant Configuration
QDRANT_URL=http://localhost:6333

# Google Calendar Configuration (REQUIRED for scheduling features)
# SETUP COMPLETE: Integration is fully implemented, only requires environment configuration
# 1. Create service account in Google Cloud Console and download JSON credentials
# 2. Place JSON file in project root and update GOOGLE_CREDENTIALS_PATH
# 3. Create dedicated Kumon calendar and copy calendar ID
# 4. Set your Google Cloud project ID
GOOGLE_CREDENTIALS_PATH=google-service-account.json
GOOGLE_CALENDAR_ID=your-kumon-calendar@group.calendar.google.com
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# LangSmith Configuration
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=kumon-assistant
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=true

# Workflow Configuration
USE_LANGGRAPH_WORKFLOW=false
WORKFLOW_ROLLOUT_PERCENTAGE=0.1

# LangGraph Configuration
LANGGRAPH_TRACING=true
LANGGRAPH_PROJECT=kumon-cecilia
LANGGRAPH_STATE_STORE=postgresql
LANGGRAPH_STATE_TTL=86400
LANGGRAPH_MAX_CONCURRENT_EXECUTIONS=10
LANGGRAPH_EXECUTION_TIMEOUT=30

# Security Configuration (Fase 5) - Military-grade protection
USE_SECURE_PROCESSING=true
SECURE_ROLLOUT_PERCENTAGE=100.0
SECURITY_LOGGING_ENABLED=true
SECURITY_MONITORING_ENABLED=true

# Security Thresholds
SECURITY_RATE_LIMIT_PER_MINUTE=50
SECURITY_MAX_MESSAGE_LENGTH=2000
SECURITY_THREAT_THRESHOLD=0.6
SECURITY_AUTO_ESCALATION_THRESHOLD=0.8

# Security Features Toggle (recommended: all true for production)
ENABLE_PROMPT_INJECTION_DEFENSE=true
ENABLE_DDOS_PROTECTION=true
ENABLE_SCOPE_VALIDATION=true
ENABLE_INFORMATION_PROTECTION=true
ENABLE_ADVANCED_THREAT_DETECTION=true