# =================================================================
# EVOLUTION API CONFIGURATION FOR KUMON ASSISTANT
# =================================================================
# Copy this file to .env and fill in your values

# =================================================================
# EVOLUTION API SETTINGS
# =================================================================
# Evolution API Base URL (when running with docker-compose, use the service name)
EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_API_KEY=your_evolution_api_key_here

# Global API key for Evolution API access
EVOLUTION_GLOBAL_API_KEY=your_global_api_key

# Authentication settings
AUTHENTICATION_TYPE=jwt
AUTHENTICATION_API_KEY=1234
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true
AUTHENTICATION_JWT_EXPIRES_IN=3600
AUTHENTICATION_JWT_SECRET=your_jwt_secret_here

# Instance settings
DEL_INSTANCE=false
DEL_STORE_CREDENTIAL=false

# Database settings for Evolution API (optional)
DATABASE_ENABLED=false
DATABASE_CONNECTION_URI=
DATABASE_CONNECTION_DB_PREFIX_NAME=evolution

# Redis settings (optional)
REDIS_ENABLED=false
REDIS_URI=redis://localhost:6379
REDIS_PREFIX_KEY=evolution

# Webhook settings
WEBHOOK_GLOBAL_URL=http://kumon-assistant:8000/api/v1/evolution/webhook
WEBHOOK_GLOBAL_ENABLED=true
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=true

# Websocket settings
WEBSOCKET_ENABLED=false
WEBSOCKET_GLOBAL_EVENTS=false

# Storage settings
CONFIG_SESSION_PHONE_CLIENT=Kumon Assistant
CONFIG_SESSION_PHONE_NAME=Chrome

# QR Code settings
QRCODE_LIMIT=30
QRCODE_COLOR=#198754

# Typebot integration (optional)
TYPEBOT_ENABLED=false
TYPEBOT_API_VERSION=latest

# Chatwoot integration (optional)
CHATWOOT_ENABLED=false

# OpenAI integration within Evolution API (optional)
OPENAI_ENABLED=false

# S3 settings (optional)
S3_ENABLED=false

# =================================================================
# KUMON ASSISTANT CONFIGURATION
# =================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Embeddings Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_DIR=./cache/embeddings

# Qdrant Vector Database (use service name when running with docker-compose)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=kumon_knowledge

# Business Configuration
BUSINESS_NAME=Kumon
BUSINESS_PHONE=+55 11 99999-9999
BUSINESS_EMAIL=contato@kumon.com
BUSINESS_ADDRESS=Rua Exemplo, 123 - São Paulo, SP
BUSINESS_HOURS=Segunda a Sexta: 8h às 18h

# Logging
LOG_LEVEL=INFO

# =================================================================
# INSTRUCTIONS FOR SETUP
# =================================================================
# 1. Copy this file to .env in your project root
# 2. Fill in all the required values above
# 3. Run: docker-compose up -d
# 4. Access Evolution API at http://localhost:8080
# 5. Create a WhatsApp instance and scan the QR code
# 6. Your Kumon Assistant will receive WhatsApp messages automatically! 