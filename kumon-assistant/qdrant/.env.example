# Qdrant Environment Variables for Railway
# Copy this file to .env and configure for your deployment

# ============================
# REQUIRED for Railway
# ============================

# Storage paths (Railway provides persistent storage)
QDRANT__STORAGE__STORAGE_PATH=/qdrant/storage
QDRANT__STORAGE__SNAPSHOTS_PATH=/qdrant/snapshots

# Service ports (Railway default)
QDRANT__SERVICE__HTTP_PORT=6333
QDRANT__SERVICE__GRPC_PORT=6334

# Enable CORS for web access
QDRANT__SERVICE__ENABLE_CORS=true

# ============================
# OPTIONAL - Security
# ============================

# API Key for authentication (highly recommended for production)
# Generate a secure key: openssl rand -hex 32
# QDRANT__SERVICE__API_KEY=your-secure-api-key-here

# Read-only API key (for public/frontend access)
# QDRANT__SERVICE__READ_ONLY_API_KEY=your-read-only-key-here

# ============================
# OPTIONAL - Performance
# ============================

# Logging level (debug, info, warn, error)
QDRANT__LOG_LEVEL=info

# Maximum request size in MB
QDRANT__SERVICE__MAX_REQUEST_SIZE_MB=32

# Number of worker threads (0 = auto-detect)
QDRANT__SERVICE__MAX_WORKERS=0

# ============================
# OPTIONAL - Advanced
# ============================

# Enable gRPC protocol (for high-performance clients)
QDRANT__SERVICE__ENABLE_GRPC=true

# Telemetry (set to true to help Qdrant team improve the product)
QDRANT__TELEMETRY_DISABLED=true

# TLS/SSL (set to true if using HTTPS)
QDRANT__SERVICE__ENABLE_TLS=false

# ============================
# Railway-specific Configuration
# ============================

# These are automatically set by Railway:
# - PORT: The port Railway assigns (usually different from 6333)
# - RAILWAY_ENVIRONMENT: production, staging, or development
# - RAILWAY_REPLICA_ID: Unique ID for this instance

# ============================
# Integration with kumon-assistant
# ============================

# In your kumon-assistant service, set:
# QDRANT_URL=http://qdrant.railway.internal:6333
# Or use the public URL:
# QDRANT_URL=https://your-qdrant-service.up.railway.app

# If using API key authentication:
# QDRANT_API_KEY=your-secure-api-key-here
