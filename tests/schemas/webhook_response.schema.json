{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Webhook Response Schema",
  "description": "Strict schema for webhook response validation",
  "type": "object",
  "required": [
    "message_id",
    "turn_id",
    "trace_id",
    "intent",
    "confidence",
    "response_text",
    "entities",
    "sent"
  ],
  "properties": {
    "message_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique message identifier"
    },
    "turn_id": {
      "type": "string",
      "minLength": 1,
      "description": "Conversation turn identifier"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1,
      "description": "Request trace identifier"
    },
    "intent": {
      "type": "string",
      "enum": [
        "greeting",
        "information_request",
        "qualification",
        "scheduling",
        "fallback",
        "objection"
      ],
      "description": "Detected user intent"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Intent detection confidence score"
    },
    "response_text": {
      "type": "string",
      "minLength": 1,
      "description": "Response message in Portuguese"
    },
    "routing_hint": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "handle_price_objection",
            "ask_clarification",
            "handoff_human"
          ]
        },
        {
          "type": "null"
        }
      ],
      "description": "Optional routing hint for special handling"
    },
    "entities": {
      "type": "object",
      "description": "Extracted entities from the message"
    },
    "sent": {
      "type": "string",
      "enum": ["true", "false"],
      "description": "Message delivery status as string (never boolean)"
    },
    "status": {
      "type": "string",
      "enum": [
        "success",
        "error",
        "ignored",
        "rate_limited",
        "completed"
      ],
      "description": "Processing status"
    },
    "message": {
      "type": ["string", "null"],
      "description": "Optional status message"
    },
    "reason": {
      "type": ["string", "null"],
      "description": "Optional reason for status"
    },
    "error": {
      "type": ["string", "null"],
      "description": "Optional error message"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Response timestamp"
    }
  },
  "additionalProperties": false
}
